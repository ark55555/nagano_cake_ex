<div class="container">
  <h3 class="bg-light text-center mt-2">マイページ</h3>

  <div class="row my-3">
    <div class="col-sm-10 d-flex align-items-center mb-2">
      <h5 class="col-2 font-weight-bold">登録情報</h5>
      <%= link_to "編集", edit_customers_path, class: "btn btn-info" %>
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered">
          <tr>
            <td class="table-light w-25">氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td class="table-light w-25">カナ</td>
            <td><%= @customer.kana_full_name %></td>
          </tr>
          <tr>
            <td class="table-light w-25">郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td class="table- w-25">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table-light w-25">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="table-light w-25">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 d-flex align-items-center">
      <h6 class="col-2 font-weight-bold">配送先</h6>
        <%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-sm-10 d-flex align-items-center">
      <h6 class="col-2 font-weight-bold">注文履歴</h6>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>