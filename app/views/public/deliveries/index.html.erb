<div class="container">
  <h3 class="bg-light text-center mt-2">配送先登録/一覧</h3>
  <div class="row my-5">
    <div class="col-sm-9">
      <%= form_with model: @delivery, url: deliveries_path, local: true do |f| %>
        <div class="field">
          <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-3" %>
          <%= f.text_field :postcode, placeholder: "0000000", class: "col-2" %>
        </div>
        <div class="field">
          <%= f.label :destination, "住所", class: "col-3" %>
          <%= f.text_field :destination, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-6" %>
        </div>
        <div class="field">
          <%= f.label :name, "宛名", class: "col-3" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "col-3" %>
          <%= f.submit "新規登録", class: "btn btn-primary btn-sm float-right mr-3" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-sm-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-sm-2">郵便番号</th>
            <th class="col-sm-5">住所</th>
            <th class="col-sm-3">宛名</th>
            <th class="col-sm-2"></th>
          </tr>
        </thead>
        <tbody>
          <% if @deliveries.present? %>
            <% @deliveries.each do |delivery| %>
            <tr>
              <td>
                <%= delivery.postcode %>
              </td>
              <td>
                <%= delivery.destination %>
              </td>
              <td>
                <%= delivery.name %>
              </td>
              <td class="text-center">
                <%= link_to "編集", edit_delivery_path(delivery), class: "btn btn-info btn-sm mr-2" %>
                <%= link_to "削除", delivery_path(delivery), method: :delete, "date-confirm" => "削除します。本当によろしいですか？",  class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4">配送先が登録されておりません。</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>