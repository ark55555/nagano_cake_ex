<div class="container">
  <h3 class="col-md-4 offset-1 bg-light text-center mt-2">ジャンル一覧・追加</h3>

  <div class="row ml-5">
    <div class="col-sm-10 my-5">
      <%= form_with model: [:admin, @genre], local:true do |f| %>
        <%= f.label :"ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名", class: "mx-3" %>
        <%= f.submit "登録", class: "btn btn-info btn-sm my-2" %>
      <% end %>
    </div>
  </div>
  <div class="row ml-5 pl-4">
    <div class="col-sm-6 px-sm-0">
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-info btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>