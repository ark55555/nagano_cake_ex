<div class="container">
  <h3 class="col-md-4 offset-1 bg-light text-center mt-2">ジャンル一覧・追加</h3>

  <div class="row ml-5">
    <div class="col-sm-10 my-5">
      <%= render "form", genre: @genre, url: admin_genres_path, submit: '登録' %>

    </div>
  </div>
  <div class="row ml-5 pl-4">
    <div class="col-sm-6 px-sm-0">
      <table class="table table-inverse">
        <thead class="table-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-info btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>