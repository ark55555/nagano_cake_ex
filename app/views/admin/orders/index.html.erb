<div class="container">
  <h3 class="bg-light text-center mt-2">注文履歴一覧</h3>
  <div class="row my-4">
    <div class="offset-sm-1 col-sm-10">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="col-sm-3 mx-auto">購入日時</th>
            <th class="col-sm-3">購入者</th>
            <th class="col-sm-2">注文個数</th>
            <th class="col-sm-2">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order) %>
              </td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_items.sum(:amount) %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>