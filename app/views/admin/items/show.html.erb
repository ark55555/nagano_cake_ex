<div class="container">
  <h3 class="col-md-4 offset-1 bg-light text-center mt-2">商品詳細</h3>
  <div class="row">
    <div class="col-sm-4 mx-2 mx-auto shadow-sm rounded px-0 my-5">
      <%= attachment_image_tag @item, :image, fallback: "no-image.png", class: "w-100" %>
    </div>
    <div class="col-sm-6">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.caption %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>) 円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active? %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-muted">販売停止中</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_admin_item_path(@item), class: "btn btn-info btn-sm" %>
    </div>
  </div>
</div>