<%= form_with model:[:admin, item], local:true do |f| %>

  <div class="form-group">
    <%= f.label :"商品画像", class: "col-sm-3 control-label ml-5" %>
    <%= f.attachment_field :image, class: "image" %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名", class: "col-sm-3 control-label ml-5" %>
    <%= f.text_field :name, class: "col-sm-5 form-control-static name" %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明", class: "col-sm-3 control-label ml-5" %>
    <%= f.text_area :caption, class: "col-sm-5 control-label caption" %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル", class: "col-sm-3 control-label ml-5" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --" %>
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格", class: "col-sm-3 control-label ml-5" %>
    <%= f.text_field :price, class: "col-sm-5 control-label explanation" %> 円
  </div>
  <div class="form-group radio_button">
    <%= f.label :"販売ステータス", class: "col-sm-3 control-label ml-5" %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売中", value: :true %>
    <%= f.radio_button :is_active, false, class: "ml-3" %>
    <%= f.label :is_active, "販売停止中", value: :false %>
  </div>
  <div class="form-group text-center">
    <%= f.submit submit, class: "btn btn-info my-2" %>
  </div>
<% end %>