<div class="container">
  <h3 class="bg-light text-center mt-4 w-50"><%= @customer.full_name %>さんの会員詳細</h3>
  <div class="row my-3">
    <div class="col-sm-12">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th class="col-3"></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_active? %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-muted">退会</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="actions offset-sm-3 mt-3">
        <%= link_to "編集", edit_admin_customer_path(@customer), class: "btn btn-info btn-sm mr-3"%>
        <%= link_to "注文履歴一覧に戻る", admin_root_path, class: "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
</div>